<!doctype html>
<html lang="en">
  <head>
    {% render "head", metadata: site.metadata, title: page.title %}
  </head>
  <body class="{{ page.layout }} {{ page.page_class }}">
    {% render "navbar", metadata: site.metadata, page: page %}

    {% unless resource.data.hide_thermometer %}
      <section>
        {% render "thermometer", funding: site.data.funding %}
      </section>
    {% endunless %}

    <main>
      {{ content }}
    </main>

    {% unless resource.data.hide_thermometer %}
      <section>
        {% render "thermometer", funding: site.data.funding %}
      </section>

      {% render "donate",
          funding: site.data.funding,
          STRIPE_PUBLIC_KEY: site.data.STRIPE_PUBLIC_KEY,
          PAYPAL_CLIENT_ID: site.data.PAYPAL_CLIENT_ID %}
    {% endunless %}
    {% render "footer", metadata: site.metadata %}
  </body>
</html>
